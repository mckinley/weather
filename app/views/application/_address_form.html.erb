<% if @address.errors.any? %>
  <div>
    <h2><%= pluralize(@address.errors.count, "error") %> prevented the retrieval of weather data.</h2>
    <ul>
      <% @address.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with method: :get do |form| %>
  <div>
    <%= form.label :zip, "Zip code:" %>
    <%= form.text_field :zip, value: @address.zip %>
    <%= form.submit "Get Weather", name: nil, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>
